{% set bulleCount = i + 1 %}
<div> 
	{{ macros.media("apparriement"+subquestion.id, subquestion.media,  "bulle"~ bulleCount ~".png", 90, 0, "Liez une proposition de droite à cet élément") }}
	<span class="answer droppable"></span>
</div>
{% if i == 0 %}
<div class="pull-right">
	{% for proposition in subquestion.propositions | shuffle %}
	    {% set bulleCount = bulleCount + 1 %}
	    <div class="droppable source">
		    <div class="draggable">
		    	prop
		        {{ macros.media("proposition"+proposition.id, proposition.media,  "bulle"~ bulleCount ~".png", 90, 0, "Proposition à associer à un élément de gauche") }}
		    </div>
		</div>
	{% endfor %}
</div>
{% endif %}