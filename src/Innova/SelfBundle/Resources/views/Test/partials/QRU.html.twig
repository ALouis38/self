{% set bulleCount = 0 %}
<div class="qru-sub">
    <h4> {{ subquestion.title }}</h4>
    <p>
    {% if subquestion.media is not null %}
        {{ macros.media("subquestion-" ~ subquestion.id, subquestion.media, subquestion.media.mediaType.name ~ ".png", 90, 0, "Proposition de réponse") }}
    {% endif %}
    {% if subquestion.mediaAmorce is not null %}
        {{ macros.media("amorce-"~ subquestion.id, subquestion.mediaAmorce, "audio.png", 90, 0, "Amorce") }}
    {% endif %}
    {% for proposition in subquestion.propositions | shuffle %}
        {% set bulleCount = bulleCount + 1 %}
        <p>
            {{ macros.inputs("radio", subquestion.id, proposition.id, proposition.title) }}
            {{ macros.media("proposition-" ~ proposition.id, proposition.media, proposition.media.mediaType.name ~ bulleCount ~".png", 90, 0, "Proposition de réponse " ~ bulleCount) }}
        </p>
    {% endfor %}
    </p>
</div>