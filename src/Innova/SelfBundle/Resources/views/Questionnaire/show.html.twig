                <td>{{ entity.dialogue }}</td>
            </tr>
            <tr>
                <th>{{ 'questionnaire.field.mediaInstruction' | trans }}</th>
                <td>{{ entity.mediaInstruction }}</td>
            </tr>
            <tr>
                <th>{{ 'questionnaire.field.mediaContext' | trans }}</th>
                <td>{{ entity.mediaContext }}</td>
            </tr>
            <tr>
                <th>{{ 'questionnaire.field.mediaText' | trans }}</th>
                <td>{{ entity.mediaText }}</td>
            </tr>
            <tr>
                <th>{{ 'questionnaire.field.sourceType' | trans }}</th>
                <td>{{ entity.sourceType }}</td>
            </tr>
            <tr>
                <th>{{ 'questionnaire.field.receptionType' | trans }}</th>
                <td>{{ entity.receptionType }}</td>
            </tr>
            <tr>
                <th>{{ 'questionnaire.field.functionType' | trans }}</th>
