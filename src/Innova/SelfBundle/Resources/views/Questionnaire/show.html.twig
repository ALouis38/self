            <tr>
                <th>{{ 'questionnaire.field.level' | trans }}</th>
                <td>{{ entity.Level }}</td>
            </tr>
            <tr>
                <th>{{ 'questionnaire.field.author' | trans }}</th>
                <td>{{ entity.author }}</td>
            </tr>
            <tr>
                <th>{{ 'questionnaire.field.instruction' | trans }}</th>
