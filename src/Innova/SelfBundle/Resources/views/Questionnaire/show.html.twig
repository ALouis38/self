            <tr>
                <th>{{ 'questionnaire.field.skill' | trans }}</th>
                <td>{{ entity.skill }}</td>
            </tr>
        </tbody>
    </table>

    <hr>
    {{ form_start(delete_form) }}
        {{ form_errors(delete_form) }}
        <a href="{{ path('admin_questionnaire') }}" class="btn btn-default">Back to the list</a>
        <a href="{{ path('admin_questionnaire_edit', { 'id': entity.id }) }}" class="btn btn-default">Edit</a>
        {{ form_widget(delete_form.submit, { 'attr': {'class': 'btn btn-danger'} }) }}

        {{ form_rest(delete_form) }}
    {{ form_start(delete_form) }}

{% endblock %}
