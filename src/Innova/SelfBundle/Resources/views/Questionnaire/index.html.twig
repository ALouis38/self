{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Questionnaire list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Level</th>
                <th>Source</th>
                <th>Supporttype</th>
                <th>Typology</th>
                <th>Focus</th>
                <th>Cognitiveoperation</th>
                <th>Function</th>
                <th>Receptiontype</th>
                <th>Domain</th>
                <th>Genre</th>
                <th>Sourcetype</th>
                <th>Languagelevel</th>
                <th>Durationgroup</th>
                <th>Flow</th>
                <th>Wordcount</th>
                <th>Theme</th>
                <th>Author</th>
                <th>Consigne</th>
                <th>Audioconsigne</th>
                <th>Audiocontexte</th>
                <th>Audioitem</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('questionnaire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.level }}</td>
                <td>{{ entity.source }}</td>
                <td>{{ entity.supportType }}</td>
                <td>{{ entity.typology }}</td>
                <td>{{ entity.focus }}</td>
                <td>{{ entity.cognitiveOperation }}</td>
                <td>{{ entity.function }}</td>
                <td>{{ entity.receptionType }}</td>
                <td>{{ entity.domain }}</td>
                <td>{{ entity.genre }}</td>
                <td>{{ entity.sourceType }}</td>
                <td>{{ entity.languageLevel }}</td>
                <td>{{ entity.durationGroup }}</td>
                <td>{{ entity.flow }}</td>
                <td>{{ entity.wordCount }}</td>
                <td>{{ entity.theme }}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.consigne }}</td>
                <td>{{ entity.audioConsigne }}</td>
                <td>{{ entity.audioContexte }}</td>
                <td>{{ entity.audioItem }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('questionnaire_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('questionnaire_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('questionnaire_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
